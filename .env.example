# Privacy Self-Service Portal - Environment Configuration Template
# Copy this file to .env and configure with your specific values

# =============================================================================
# REQUIRED: Supabase Configuration
# =============================================================================
# Get these from your Supabase project dashboard
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment (development, staging, production)
VITE_ENVIRONMENT=production
# Base application URL (used for redirects and links)
VITE_APP_URL=https://yourdomain.com

# =============================================================================
# BRAND CONFIGURATION
# =============================================================================

# Core Brand Identity
VITE_BRAND_NAME=YourBrand
VITE_BRAND_FULL_NAME=YourBrandâ„¢ Privacy Portal
VITE_BRAND_TAGLINE=Privacy Portal
VITE_BRAND_DESCRIPTION=Privacy self-service portal empowering stakeholders to exercise data rights and manage privacy compliance

# Visual Identity
VITE_BRAND_LOGO_PRIMARY=/logos/your-logo.png
VITE_BRAND_LOGO_ICON=/logos/your-icon.png
VITE_BRAND_LOGO_ALT=Your Brand Logo

# Color Scheme (hex codes)
VITE_BRAND_PRIMARY_COLOR=#1E40AF
VITE_BRAND_ACCENT_COLOR=#1E3A8A
VITE_BRAND_BACKGROUND_COLOR=#F8FAFF
VITE_BRAND_TEXT_COLOR=#0B1220

# =============================================================================
# CONTACT INFORMATION
# =============================================================================
VITE_SUPPORT_EMAIL=support@yourdomain.com
VITE_PRIVACY_EMAIL=privacy@yourdomain.com
VITE_LEGAL_EMAIL=legal@yourdomain.com
VITE_SUPPORT_PHONE=(555) 123-4567
VITE_COMPANY_ADDRESS=Your Address, City, State 12345

# =============================================================================
# LEGAL INFORMATION
# =============================================================================
VITE_COMPANY_NAME=Your Company Name
VITE_COMPANY_COUNTRY=United States
VITE_COMPANY_STATE=Your State

# =============================================================================
# SOCIAL MEDIA LINKS (Optional)
# =============================================================================
VITE_BRAND_WEBSITE=https://yourdomain.com
VITE_BRAND_TWITTER=https://twitter.com/yourbrand
VITE_BRAND_LINKEDIN=https://linkedin.com/company/yourbrand

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable analytics tracking
VITE_ENABLE_ANALYTICS=false
# Enable offline mode functionality
VITE_ENABLE_OFFLINE=true
# Enable Progressive Web App features
VITE_ENABLE_PWA=true
# Enable Supabase integration
VITE_ENABLE_SUPABASE=true

# =============================================================================
# CUSTOMIZATION OPTIONS
# =============================================================================
# Enable custom CSS injection
VITE_ENABLE_CUSTOM_CSS=false
# URL to custom CSS file (optional)
VITE_CUSTOM_CSS_URL=
# URL to custom JavaScript file (optional)
VITE_CUSTOM_JS_URL=

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=
# Google Analytics tracking ID (optional)
VITE_GA_TRACKING_ID=
# PostHog API key for analytics (optional)
VITE_POSTHOG_API_KEY=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Content Security Policy nonce (generated automatically if not set)
VITE_CSP_NONCE=
# Enable strict security headers
VITE_ENABLE_SECURITY_HEADERS=true
# Rate limiting configuration
VITE_RATE_LIMIT_ENABLED=true
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Enable development tools and debugging
VITE_DEBUG=false
# Enable detailed logging
VITE_ENABLE_LOGGING=false
# Mock Supabase for development
VITE_MOCK_SUPABASE=false